use strict;

######################################################################
#
# GetToolName
#
######################################################################

sub GetToolName
{
  return "ftimes";
}


######################################################################
#
# GetToolVersion
#
######################################################################

sub GetToolVersion
{
  my ($phProperties) = @_;

  my $sVersion;

  if (!open(PH, "$$phProperties{'TargetProgram'} --version |"))
  {
    return undef;
  }
  while (my $sLine = <PH>)
  {
    $sLine =~ s/[\r\n]*$//;
    if ($sLine =~ /^(ftimes \d+\.\d+\.\d+ .* (?:32|64) bit)$/)
    {
      $sVersion = $1;
    }
  }
  close(PH);

  return $sVersion;
}

1;
