#.SILENT:

prefix			= @prefix@
exec_prefix		= @exec_prefix@
bindir			= @bindir@
srcdir			= @srcdir@
VPATH			= ${srcdir}

EXTENSION		= @extension@

INSTALL			= @INSTALL@

SCRIPT_FILES		=\
			ftimes-dig2ctx.pl\
			hipdig.pl

all:

install: ${SCRIPT_FILES}
	@umask 22; if [ ! -d ${bindir} ]; then mkdir -p ${bindir}; fi
	@for i in ${SCRIPT_FILES}; do\
		if [ -f ${srcdir}/$${i} ]; then file=${srcdir}/$${i}; else file=$${i}; fi;\
		${INSTALL} -m 755 $${file} ${bindir};\
	done

clean:

clean-all: clean
	rm -f Makefile

