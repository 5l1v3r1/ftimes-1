#.SILENT:

prefix			= @prefix@
exec_prefix		= @exec_prefix@
srcdir			= @srcdir@
VPATH			= ${srcdir}

INSTALL			= @INSTALL@

SUBDIRS			= @tool_subdirs@

all test install clean:
	@cwd=`pwd`; for i in ${SUBDIRS} "-end-"; do\
		if test $${i} != "-end-"; then\
			subdir=`basename $${cwd}`/$${i};\
			echo '===>' $${subdir};\
			cd $${cwd}/$${i} && make $@;\
		fi;\
	done

clean-all:
	@cwd=`pwd`; for i in ${SUBDIRS} "-end-"; do\
		if test $${i} != "-end-"; then\
			subdir=`basename $${cwd}`/$${i};\
			echo '===>' $${subdir};\
			cd $${cwd}/$${i} && make $@;\
		fi;\
	done
	rm -f Makefile

