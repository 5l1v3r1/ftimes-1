#.SILENT:

prefix			= @prefix@
exec_prefix		= @exec_prefix@
bindir			= @bindir@
srcdir			= @srcdir@
VPATH			= ${srcdir}

INSTALL			= @INSTALL@

SSL_DIRECTORY		= @ssldir@
SSL_INCLUDES		= @ssl_incs@
SSL_SOURCES		= @ssl_srcs@
SSL_LFLAGS		= @ssllibflags@
SSL_IFLAGS		= @sslincflags@

AP_INCLUDES		= @ap_incs@
AP_SOURCES		= @ap_srcs@

XMAGIC_INCLUDES		= @xmagic_incs@
XMAGIC_SOURCES		= @xmagic_srcs@

FTIMES_LFLAGS		= ${LIBS} ${SSL_LFLAGS}
FTIMES_IFLAGS		= -I. ${SSL_IFLAGS}

FTIMES_INCLUDES		=\
			all-includes.h\
			${AP_INCLUDES}\
			app-includes.h\
			compare.h\
			config.h\
			decode.h\
			dig.h\
			error.h\
			fsinfo.h\
			ftimes.h\
			http.h\
			ktypes.h\
			md5.h\
			message.h\
			socket.h\
			${SSL_INCLUDES}\
			sys-includes.h\
			${XMAGIC_INCLUDES}
FTIMES_SOURCES		=\
			analyze.c\
			${AP_SOURCES}\
			cfgtest.c\
			cmpmode.c\
			compare.c\
			decode.c\
			decoder.c\
			develop.c\
			dig.c\
			digmode.c\
			error.c\
			fsinfo.c\
			ftimes.c\
			getmode.c\
			http.c\
			map.c\
			mapmode.c\
			md5.c\
			message.c\
			properties.c\
			putmode.c\
			socket.c\
			${SSL_SOURCES}\
			support.c\
			time.c\
			url.c\
			${XMAGIC_SOURCES}
FTIMES_OBJECTS		= ${FTIMES_SOURCES:.c=.o}
FTIMES_EXECUTEABLE	= ftimes

DEFS			= @DEFS@
LIBS			= @LIBS@
CFLAGS			= @CFLAGS@
CC			= @CC@

BIN_FILES		= ${FTIMES_EXECUTEABLE}

all: ${FTIMES_EXECUTEABLE}

install: ${BIN_FILES}
	@umask 22; if [ ! -d ${bindir} ]; then mkdir -p ${bindir}; fi
	@for i in ${BIN_FILES}; do\
		${INSTALL} -m 755 $$i ${bindir};\
	done

clean:
	rm -f ${FTIMES_EXECUTEABLE} ${FTIMES_OBJECTS} ${FTIMES_EXECUTEABLE}.core core

clean-all: clean
	rm -f Makefile config.h

${FTIMES_EXECUTEABLE}: ${FTIMES_INCLUDES} ${FTIMES_OBJECTS}
	${CC} ${FTIMES_OBJECTS} ${CFLAGS} -o ${FTIMES_EXECUTEABLE} ${FTIMES_IFLAGS} ${FTIMES_LFLAGS}

.c.o:
	${CC} ${CFLAGS} ${FTIMES_IFLAGS} -c $<

