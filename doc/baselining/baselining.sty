\def\GetMonth#1
{
  \ifcase#1
        \or
    Jan\ \or
    Feb\ \or
    Mar\ \or
    Apr\ \or
    May\ \or
    Jun\ \or
    Jul\ \or
    Aug\ \or
    Sep\ \or
    Oct\ \or
    Nov\ \or
    Dec\
  \fi
}

\def\ParseCVSDate #1: #2/#3/#4 #5 #6 ;
{
  \def\CVSDateString{Last modified on \GetMonth{#3} #4, #2 #5}
}

\def\ParseCVSRevision #1: #2 #3 ;
{
  \def\CVSRevisionString{Revision #2}
}

